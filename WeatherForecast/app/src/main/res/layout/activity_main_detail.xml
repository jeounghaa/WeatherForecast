<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDetailActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_backwards_icon_149034"
        android:background="#00FFFFFF"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tvArea3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역명"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/tvTemp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기온"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvArea3"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:id="@+id/llayout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvArea3"
            android:layout_marginTop="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_wi_celsius"
                android:text="기온"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvMinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최저 기온"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/tvMaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최고 기온"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/llayout0"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_wi_humidity"
                android:text="습도"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="습도"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/llayout1"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_wi_strong_wind"
                android:text="풍속"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="풍속"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/llayout2"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_wi_cloud"
                android:text="흐림"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvClouds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="흐림"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>